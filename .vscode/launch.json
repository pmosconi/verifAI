  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
    },
    {
      "name": "index_files.py",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "program": "index_files.py",
      "console": "integratedTerminal",
      "args": ["test_data"],
    },
    {
      "name": "main.py",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "program": "main.py",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}